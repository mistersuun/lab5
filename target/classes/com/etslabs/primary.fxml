<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.etslabs.PrimaryController" spacing="10" alignment="CENTER">
    <StackPane fx:id="imageContainer" maxWidth="800" maxHeight="600">
        <!-- The image will be displayed here -->
    </StackPane>
    <Button text="Zoom In" onAction="#zoomIn"/>
    <Button text="Zoom Out" onAction="#zoomOut"/>
    <Button text="Undo" onAction="#undo"/>
    <Button text="Redo" onAction="#redo"/>
    <Button text="Load Image" onAction="#loadImage"/>
    <Button text="Save State" onAction="#saveState"/>
    <Button text="Load State" onAction="#loadState"/>
</VBox>
